        const baseURL = "//images.igdb.com/igdb/image/upload/t_original/"
        const bashImageId = item.screenshots[0].image_id
        const jpgFormat = ".jpg"

        let fullUrl = baseURL.concat(bashImageId, jpgFormat)

        console.log(fullUrl)
        %> 
